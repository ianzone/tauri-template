{
  "name": "tauri-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "preview": "tauri dev --release",
    "task": "cargo build --manifest-path src-tauri/Cargo.toml --no-default-features && na vite",
    "lint": "biome check --fix src",
    "update": "nup --latest && cargo update --manifest-path src-tauri/Cargo.toml",
    "prepare": "lefthook install",
    "commit": "git add -A && git commit --no-edit",
    "squash": "bun scripts/squash.ts && git commit --no-edit --no-verify"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.1",
    "@es-proj/utils": "^1.6.7",
    "@tauri-apps/cli": "^2.9.1",
    "@tauri-apps/plugin-opener": "~2",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "czg": "^1.12.0",
    "knip": "^5.66.3",
    "lefthook": "^2.0.1",
    "vite": "^7.1.12"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "esbuild",
    "lefthook"
  ]
}
